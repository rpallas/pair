.container
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeHolder="filter by")
            .form-group.margin-left-med
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.label for item in sortOptions")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Name
                th Status
                th Points
                th Skills
            tbody
                tr(ng-repeat="user in users | filter:searchText | orderBy:sortOrder")
                    td
                        a(href="/browse/{{ user._id }}") {{ user.firstName + " " + user.lastName }}
                    td {{ user.status }}
                    td {{ user.points }}
                    td {{ user.skills.join(', ') }}