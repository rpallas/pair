.container
    img.pull-left.profile-img.img-responsive.img-thumbnail(ng-src="{{user.getProfileImage()}}", alt="Profile picture")
    h1.clearfix {{ user.displayName }}
    .row
        .col-md-6
            h3(ng-show="user.isAdmin()") Admin
            h3 Status: {{ user.status }}
            a.btn.btn-default.btn-sm(href="" ng-click="requestPair()") Request Pair
                span.glyphicon.glyphicon-share-alt
        .col-md-6
            .panel.panel-primary
                .panel-heading Skills
                .panel-body
                    div(ng-repeat="skill in user.skills") {{ skill }}