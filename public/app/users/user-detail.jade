.container
    img.pull-left.profile-img.img-responsive.img-thumbnail(ng-src="{{user.getProfileImage()}}", alt="Profile picture")
    a.btn.btn-info.btn-sm.pull-right(ng-show="isCurrentUser()" href="/profile") Edit Profile
    h1.clearfix
        &nbsp;
        | {{ user.displayName }}
    .row
        .col-md-6
            h3(ng-show="user.isAdmin()") Admin
            h4 Status: {{ user.status }}
            a.btn.btn-primary.btn-sm(ng-hide="isCurrentUser()" href="/users/{{user._id}}/request") Request Pair
                span.glyphicon.glyphicon-share-alt
        .col-md-6
            .panel.panel-default
                .panel-heading Skills
                .panel-body
                    div(ng-repeat="skill in user.skills") {{ skill }}