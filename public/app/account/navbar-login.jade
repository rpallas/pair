.navbar-right(ng-controller="navbarLoginCtrl")
    form.navbar-form(ng-hide="identity.isAuthenticated()")
        .form-group
            input.form-control.input-sm(placeholder="Email", ng-model="username")
        .form-group
            input.form-control.input-sm(type="password", placeholder="Password", ng-model="password")
        button.btn.btn-primary(ng-click="signin(username, password)") Sign In
        | &nbsp;
        a.btn.btn-success(href="/signup") Sign Up
    ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="", data-toggle="dropdown")
                | {{ identity.currentUser.firstName + " " + identity.currentUser.lastName }}
                b.caret
            ul.dropdown-menu
                li(ng-show="identity.currentUser.isAdmin()", data-toggle="collapse", data-target=".navbar-collapse")
                    a(href="/admin/users") User Admin
                li(data-toggle="collapse", data-target=".navbar-collapse")
                    a(href="/profile") Profile
                li(data-toggle="collapse", data-target=".navbar-collapse")
                    a(href="", ng-click="signout()") Sign Out
